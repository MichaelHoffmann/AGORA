<mx:Canvas xmlns:fx="http://ns.adobe.com/mxml/2009" 
		   xmlns:s="library://ns.adobe.com/flex/spark" 
		   xmlns:mx="library://ns.adobe.com/flex/mx"
		   xmlns:classes="classes.*" 
		   xmlns:components="components.*"
		   xmlns:value_objects="ValueObjects.*"
		   creationComplete="onCreationComplete(event)">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:VGroup id="container" paddingBottom="10" paddingTop="10">			
		<s:HGroup id="topPanel" gap="10">
			<s:Button id="gotoMenuBtn" label="Save and Home" width="150" click="discardChanges(event)">
			</s:Button>
			<s:Button id="saveAsBtn" label="Save Map As" visible="true" width="150" 
					  click="Alert.show(Language.lookup('UnderConstruction'));">
			</s:Button>
		</s:HGroup>
		
		<components:TitleDisplay id = "title" width="100%" height="50">
		</components:TitleDisplay>
	
		<s:Scroller id="agora">	
			<s:Group>
				<mx:Canvas>
					<components:AgoraMap id="agoraMap" backgroundColor="0xffffff">	
					</components:AgoraMap>	
				</mx:Canvas>
			</s:Group>
		</s:Scroller>
	</s:VGroup>
	
	<fx:Script>
		<![CDATA[
			import Controller.AGORAController;
			import Controller.LayoutController;
			
			import ValueObjects.AGORAParameters;
			
			import flash.display.*;
			
			import mx.binding.utils.BindingUtils;
			import mx.controls.Alert;
			import mx.controls.Label;
			import mx.controls.Text;
			import mx.core.Application;
			import mx.core.FlexGlobals;
			import mx.core.UIComponent;
			import mx.events.FlexEvent;
			
			import spark.components.Group;
			import spark.primitives.Graphic;
			
			
			public var numComponentsX:int;
			public var numComponentsY:int;
			public var layoutManager:LayoutController;
			
			import classes.Language;
			
			public function hideMap():void
			{
				//var group:Group = Group(this.parent.getChildByName("agoraMenu"));
				//group.visible = true;
				//Group(this.parent).removeElement(this);
			}
			
			public function discardChanges(event:Event):void
			{
				AGORAController.getInstance().hideMap();
			}
			
			public function setWidth(event: Event):void
			{
				FlexGlobals.topLevelApplication.map.agora.height =  FlexGlobals.topLevelApplication.map.stage.stageHeight - FlexGlobals.topLevelApplication.map.topPanel.height - FlexGlobals.topLevelApplication.map.container.gap * 2 - FlexGlobals.topLevelApplication.map.title.height - 30;
				FlexGlobals.topLevelApplication.map.agora.width = FlexGlobals.topLevelApplication.map.stage.stageWidth - 50;
			}
			
			public function initApp():void
			{	
				agoraMap.addEventListener(Event.ADDED_TO_STAGE, setWidth);
				ArgumentPanel.parentMap = agoraMap;			
				dispatchEvent(new Event("created",true,false));
			}
			
			//------------------------- EVENT LISTENERS -----------------------//
			protected function onCreationComplete(event:FlexEvent):void{
				saveAsBtn.toolTip = AGORAParameters.getInstance().SUPPORT_SAVEAS;
			}
		]]>
	</fx:Script>
</mx:Canvas>
