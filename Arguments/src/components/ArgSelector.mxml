<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="400">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<mx:Canvas>
		<mx:List id="mainSchemes"
				 dataProvider="{scheme}"
				 rollOverColor="#b2c4e7"
				 textRollOverColor="#FFFFFF"
				 selectionColor="#5577b8"  
				 focusRoundedCorners="tr br tl bl"
				 paddingLeft="8"
				 labelField="name"/>
				 <!-- itemClick="changeTitle(event)" -->
		
		<mx:List id="typeSelector" 
				 x="{mainSchemes.width}"
				 rollOverColor="#b2c4e7"
				 textRollOverColor="#FFFFFF"
				 selectionColor="#5577b8"  
				 visible="false"
				 focusRoundedCorners="tr br tl bl"
				 paddingLeft="8"
				 width="220"/>
		
		<mx:List id="andor" 
				 x="{mainSchemes.width+typeSelector.width}"
				 dataProvider="{options}"
				 rollOverColor="#b2c4e7"
				 textRollOverColor="#FFFFFF"
				 selectionColor="#5577b8"  
				 visible="false"
				 focusRoundedCorners="tr br tl bl"
				 paddingLeft="8"/>
	</mx:Canvas>
	
	<fx:Script>
		<![CDATA[
			
			import flash.events.Event;
			import flash.events.MouseEvent;
			
			import logic.*;
			
			import mx.controls.Alert;
			import mx.events.ListEvent;
			
			private var _selectedScheme:String;
			private var _selectedType:String = "";
			private var _languageTypes:Array;
			private var _selectedOption:String;
			private var _scheme:Array;
			private var _options:Array;
			
			
			override protected function commitProperties():void
			{
					super.commitProperties();
			}
			
			
			public function get selectedOption():String
			{
				return _selectedOption;
			}

			public function set selectedOption(value:String):void
			{
				_selectedOption = value;
			}

			[Bindable]
			public function set scheme(value:Array):void
			{
				_scheme = value;
			}
			
			public function get scheme():Array
			{
				return _scheme;
			}
			
			public function get options():Array
			{
				return _options;
			}

			[Bindable]
			public function set options(value:Array):void
			{
				_options = value;
			}

			public function get selectedType():String
			{
				return _selectedType;
			}

			[Bindable]
			public function set selectedType(value:String):void
			{
				_selectedType = value;
			}


			public function get selectedScheme():String
			{
				return _selectedScheme;
			}
			
			[Bindable]
			public function set selectedScheme(value:String):void
			{
				_selectedScheme = value;
			}

			private var _myclassindex:int;
			
			public function get myclassindex():int
			{
				return _myclassindex;
			}
			
			public function set myclassindex(value:int):void
			{
				_myclassindex = value;
			}
			
			public function init():void{
				
			}
		]]>
	</fx:Script>
</s:Group>
