<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<mx:Canvas creationComplete="init()">
		<mx:List id="mainSchemes"
				 dataProvider="{_scheme}" 
				 rollOverColor="#b2c4e7"
				 textRollOverColor="#FFFFFF"
				 selectionColor="#5577b8"  
				 focusRoundedCorners="tr br tl bl"
				 paddingLeft="8"
				 labelField="name"
				 />
		
		<mx:List id="argumentSelector" 
				 x="{mainSchemes.width}" 
				 rollOverColor="#b2c4e7"
				 textRollOverColor="#FFFFFF"
				 selectionColor="#5577b8"  
				 visible="false"
				 focusRoundedCorners="tr br tl bl"
				 paddingLeft="8"
				 width="450"
				 
				 />
	</mx:Canvas>
	
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.events.ListEvent;
			
			private var _selectedScheme:String;
			private var _selectedType:String;
			private var _hover:Boolean;
			[Bindable]
			private var _scheme:Array;	
			[Bindable]
			private var _languageTypeHolder:Object;
			
			public function init():void{
				Alert.show("inside init");
				_scheme = ["modus ponens","modus tollens","conjunctive syllogism","disjunctive syllogism","noth both syllogism"];
				
			}
		]]>
	</fx:Script>
</s:Group>
