					}
					else if(value.statementFunction == StatementModel.AMENDMENT){
						BindingUtils.bindProperty(this, "statementType", this, ["model","statementFunction"]);
					}
					else if(value.statementFunction == StatementModel.REFERENCE){
						BindingUtils.bindProperty(this, "statementType", this, ["model","statementFunction"]);
					}
					else if(value.statementFunction == StatementModel.REFORMULATION){
						BindingUtils.bindProperty(this, "statementType", this, ["model","statementFunction"]);
					}
					else if(value.statementFunction == StatementModel.LINKTOMAP){
						BindingUtils.bindProperty(this, "statementType", this, ["model","statementFunction"]);
					}
					else if(value.statementFunction == StatementModel.LINKTORESOURCES){
