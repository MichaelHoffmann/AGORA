			protected function onshowButtonClicked(event:MouseEvent):void{
				if(event.currentTarget.label == "Show More")
				{
					//FlexGlobals.topLevelApplication.map.agoraMap.invalidateDisplayList();
					AGORAModel.getInstance().agoraMapModel.showChildren =  new Dictionary;
					var model1:StatementModel = model;
					var stack:Array = new Array();
					stack.push(model);
					while (stack.length != 0)
					{
						model1 = stack.pop();
						for each(var obj:StatementModel in model1.comments)
						{
							stack.push(obj);
							if(obj.parentStatement!=null) 
								AGORAModel.getInstance().agoraMapModel.showChildren[obj.ID] = obj; 
						}
						
					}
					event.currentTarget.label = "Hide";
					AGORAModel.getInstance().agoraMapModel.hide[model.ID] = 0;
				}
				else if(event.currentTarget.label == "Hide")
				{
					event.currentTarget.label = "Show More";
					AGORAModel.getInstance().agoraMapModel.addClicked = 0;
					AGORAModel.getInstance().agoraMapModel.hide[model.ID] = 1;
					var model1:StatementModel = model;
					var stack:Array = new Array();
					stack.push(model);
					while (stack.length != 0)
					{
						
						model1 = stack.pop();
						for each(var obj:StatementModel in model1.comments)
						{
							stack.push(obj);
							if(obj.statementFunction != StatementModel.OBJECTION || obj.statementFunction != StatementModel.COUNTER_EXAMPLE)
							{
								
								AGORAModel.getInstance().agoraMapModel.deletedList.push(obj);
								if(FlexGlobals.topLevelApplication.map.agoraMap.drawUtility2.numChildren > 0)
									FlexGlobals.topLevelApplication.map.agoraMap.drawUtility2.removeChildren(0,FlexGlobals.topLevelApplication.map.agoraMap.drawUtility2.numChildren-1);
								for each(var shape1:Shape in FlexGlobals.topLevelApplication.map.agoraMap.rectangle)
									shape1.graphics.clear();
								
								delete AGORAModel.getInstance().agoraMapModel.panelListHash[obj.ID];
								
								delete AGORAModel.getInstance().agoraMapModel.showChildren[obj.ID];
							}
						}
						
					}
				}
				LoadController.getInstance().fetchMapData();
			}
