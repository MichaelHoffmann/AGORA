        public var projMapModel:Model.LoadProjectMapsModel;

        public var mapListXML:XML;

        public var mapMetaDataVector:__AS3__.vec.Vector.<Model.MapMetaData>;

        internal var back:spark.components.Button;
        ]]>
        
