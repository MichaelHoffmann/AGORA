<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" creationComplete="init()">
	<mx:Metadata>
		[Event(name="schemeAccepted",type="events.SchemeSelectedEvent")]
		[Event(name="schemeRollOver", type="events.SchemeSelectedEvent")]
	</mx:Metadata>
	
	<mx:Script source="../scripts/schemeSelectorScript.as" />
	<mx:List dataProvider="{_schemeHolder}" 
			 backgroundColor="#FFFFFF" 
			 rollOverColor="#b2c4e7"
			 textRollOverColor="#FFFFFF"
			 selectionColor="#5577b8"  
			 id="mainSchemes"
			 itemRollOver="getSchemeLanguages(event)"
			 itemClick="getSchemeLanguages(event)"
			 focusRoundedCorners="tr br tl bl"
			 cornerRadius="10"
			 paddingLeft="8"
			 labelField="name"
			 />
			 
	<mx:List id="argumentSelector" 
			 x="{mainSchemes.width}" 
			 backgroundColor="#FFFFFF" 
			 rollOverColor="#b2c4e7"
			 textRollOverColor="#FFFFFF"
			 selectionColor="#5577b8"  
			 visible="false"
			 focusRoundedCorners="tr br tl bl"
			 cornerRadius="10"
			 paddingLeft="8"
			 itemClick="acceptLanguageType(event)" 
			 itemRollOver="rollOverLanguageType(event)"
			 width="450"
			 
			 />
			 
	<mx:RemoteObject id="schemeService" destination="amfphp" source="argumentschememodelservice">
		
		<mx:method name="getSchemes" result="showSchemes(event)" fault="onFault(event)" />
		<mx:method name="getSchemeClasses" result="setSchemeClass(event)" fault="onFault(event)" />
		<mx:method name="getLanguageTypes" result="showLanguageType(event)" fault="onFault(event)" />
		<mx:method name="getLanguageFunction" result="sendScheme(event)" fault="onFault(event)" />
		<mx:method name="rollOverLanguageFunction" result="rollOverScheme(event)" fault="onFault(event)" /> 
	</mx:RemoteObject>
</mx:Canvas>
