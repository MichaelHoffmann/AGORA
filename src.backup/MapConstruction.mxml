<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:classes="classes.*"
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="1440" minHeight="900" creationComplete="init()" xmlns:components="components.*">
		
	<s:Label text="Welcome to AGORA-net! Please choose one of the following tasks to continue.."
			 x="10" y="10"
			 fontWeight="bold" 
			 fontFamily="Verdana"  
			 fontSize="14"/>
	
	<mx:TextArea  id="claimStart"
				  x="10" 
				  y="67" 
				  width="191" 
				  height="45" 
				  text="{Language.lookup(&quot;WhatIsMainClaim&quot;)}" 
				  toolTip="The easiest way to construct an argument"
				  textAlign="center"
				  click="startWithClaim()"/>
	<mx:TextArea id="schemeStart"
				 x="338" 
				 y="67" 
				 text="{Language.lookup(&quot;UseArgScheme&quot;)}" 
				 textAlign="center" 
				 width="184"
				 click="startWithScheme()"/>
	
	<components:DynamicTextArea id="conceptStart"
							 x="658" 
							 y="67" 
							 minWidth="195"
							 textAlign="center"/>
	<components:DynamicTextArea id="argumentPaste"
							 x="1027" 
							 y="67"  
							 click="{argumentPaste.text=''}" 
							 textAlign="center"/>
	
